# setup bar
bar {
	set $purple #8A2BE2
	set $black #000000
	set $transparent_black #00000000
	set $transparent_purple #8A2BE280
        colors {
        background $transparent_black
        statusline $purple
        separator $purple
        focused_workspace  $purple $purple $black
        active_workspace   $transparent_black $transparent_black $purple
        inactive_workspace $transparent_black $transparent_black $transparent_black
        urgent_workspace   $purple $purple $black
    }
    i3bar_command i3bar --transparency   
    status_command i3status -c /home/$USER/.config/i3status/i3status.conf
}